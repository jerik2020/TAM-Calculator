<body>
  <h1>TAM Calculator</h1>

  <div class="section">
    <h2>Injured Finger</h2>
    <label>MP Flexion: <input id="inj_mp_flex" type="number" /></label><br>
    <label>MP Extension Deficit: <input id="inj_mp_ext" type="number" /></label><br>
    <label>PIP Flexion: <input id="inj_pip_flex" type="number" /></label><br>
    <label>PIP Extension Deficit: <input id="inj_pip_ext" type="number" /></label><br>
    <label>DIP Flexion: <input id="inj_dip_flex" type="number" /></label><br>
    <label>DIP Extension Deficit: <input id="inj_dip_ext" type="number" /></label><br>
  </div>

  <div class="section">
    <h2>Contralateral Finger</h2>
    <label>MP Flexion: <input id="con_mp_flex" type="number" /></label><br>
    <label>MP Extension Deficit: <input id="con_mp_ext" type="number" /></label><br>
    <label>PIP Flexion: <input id="con_pip_flex" type="number" /></label><br>
    <label>PIP Extension Deficit: <input id="con_pip_ext" type="number" /></label><br>
    <label>DIP Flexion: <input id="con_dip_flex" type="number" /></label><br>
    <label>DIP Extension Deficit: <input id="con_dip_ext" type="number" /></label><br>
  </div>

  <button onclick="calculateTAM()">Calculate TAM</button>

  <div class="section">
    <h2>Results</h2>
    <p id="results"></p>
  </div>

  <script>
    function calculateTAM() {
      const injFlex = ['mp', 'pip', 'dip'].reduce((sum, joint) =>
        sum + parseInt(document.getElementById(`inj_${joint}_flex`).value || 0), 0);
      const injExt = ['mp', 'pip', 'dip'].reduce((sum, joint) =>
        sum + parseInt(document.getElementById(`inj_${joint}_ext`).value || 0), 0);
      const conFlex = ['mp', 'pip', 'dip'].reduce((sum, joint) =>
        sum + parseInt(document.getElementById(`con_${joint}_flex`).value || 0), 0);
      const conExt = ['mp', 'pip', 'dip'].reduce((sum, joint) =>
        sum + parseInt(document.getElementById(`con_${joint}_ext`).value || 0), 0);

      const tamInj = injFlex - injExt;
      const tamCon = conFlex - conExt;

      const tamPercent = tamCon === 0 ? 0 : Math.round((tamInj / tamCon) * 100);

      let grade = 'Poor';
      if (tamPercent === 100) grade = 'Excellent';
      else if (tamPercent >= 75) grade = 'Good';
      else if (tamPercent >= 50) grade = 'Fair';

      document.getElementById('results').innerHTML = `
        <strong>Injured TAM:</strong> ${tamInj}°<br>
        <strong>Contralateral TAM:</strong> ${tamCon}°<br>
        <strong>TAM%:</strong> ${tamPercent}%<br>
        <strong>Evaluation:</strong> ${grade}
      `;
    }
  </script>
</body>
